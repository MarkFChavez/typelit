<% content_for :hide_header, true %>

<div class="min-h-screen flex flex-col-reverse lg:flex-row">
  <!-- Left Side - Marketing Content (Dark) - Hidden on mobile -->
  <div class="hidden lg:flex flex-1 bg-stone-900 text-white p-8 lg:p-12 xl:p-16 flex-col justify-start overflow-y-auto lg:h-screen">
    <div class="max-w-xl mx-auto w-full space-y-8">

      <!-- Branding -->
      <div class="space-y-4">
        <h1 class="font-serif text-5xl sm:text-6xl lg:text-7xl font-medium tracking-tight">
          TypeLit
        </h1>
        <p class="text-xl sm:text-2xl text-stone-300 font-light leading-relaxed">
          Master typing by reading the books you love
        </p>
      </div>

      <!-- Self-Hosted Badge -->
      <div class="bg-stone-800/50 rounded-lg p-5">
        <div class="flex items-center gap-3 mb-4">
          <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-stone-700 flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>
            </svg>
          </div>
          <span class="text-white font-medium text-lg">Self-Hosted</span>
        </div>
        <ul class="text-stone-300 text-sm space-y-2">
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-emerald-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Your books, your server, no copyright concerns
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-emerald-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Open source & fully transparent
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-emerald-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            No subscriptions, host once forever
          </li>
        </ul>
      </div>

      <!-- Get Started -->
      <div class="text-sm">
        <p class="text-stone-400 mb-2">Get started:</p>
        <div class="flex items-center gap-2 bg-stone-800 px-3 py-2 rounded">
          <code class="flex-1 text-stone-300 font-mono text-xs">git clone <%= ENV.fetch("GITHUB_CLONE_URL") %></code>
          <button type="button" data-controller="clipboard" data-clipboard-text-value="git clone <%= ENV.fetch("GITHUB_CLONE_URL") %>" data-action="click->clipboard#copy" class="text-stone-400 hover:text-white transition-colors" title="Copy to clipboard">
            <svg class="w-4 h-4" data-clipboard-target="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
          </button>
        </div>
      </div>

      <!-- Visual UI Preview/Mockup -->
      <div class="hidden sm:block">
        <div class="bg-white rounded-lg overflow-hidden border border-stone-600">
          <!-- Minimal header -->
          <div class="px-4 py-3 flex items-center justify-between border-b border-stone-200">
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4 text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
              </svg>
              <div>
                <p class="text-xs font-medium text-stone-900">1984</p>
                <p class="text-[10px] text-stone-400">Chapter 1</p>
              </div>
            </div>
            <span class="text-xs text-stone-400">3 / 12</span>
          </div>

          <!-- Progress bar -->
          <div class="h-0.5 bg-stone-100">
            <div class="h-full bg-stone-900 w-3/5"></div>
          </div>

          <!-- Typing area -->
          <div class="p-6">
            <p class="font-mono text-sm leading-relaxed">
              <span class="text-stone-900">It was a bright cold day in April, and the clocks were striking thirteen.</span><span class="inline-block w-0.5 h-4 bg-stone-900 align-middle animate-pulse"></span><span class="text-stone-300"> Winston Smith, his chin nuzzled into his breast</span>
            </p>
          </div>

          <!-- Footer -->
          <div class="px-4 py-2 border-t border-stone-200 flex items-center justify-between text-[10px] text-stone-400">
            <div class="flex items-center gap-4">
              <span class="flex items-center gap-1">
                <kbd class="px-1.5 py-0.5 bg-stone-100 border border-stone-200 rounded text-[9px] font-mono">Esc</kbd>
                <span>quit</span>
              </span>
              <span class="flex items-center gap-1">
                <kbd class="px-1.5 py-0.5 bg-stone-100 border border-stone-200 rounded text-[9px] font-mono">Tab</kbd>
                <span>restart</span>
              </span>
            </div>
            <span>TypeLit</span>
          </div>
        </div>
      </div>

    </div>
  </div>

  <!-- Right Side - Login Form -->
  <div class="flex-1 bg-stone-900 lg:bg-stone-50 p-8 pt-16 lg:p-12 xl:p-16 flex flex-col justify-start lg:justify-center min-h-screen lg:min-h-0 lg:h-screen lg:overflow-hidden">
    <div class="max-w-sm mx-auto w-full">

      <!-- Mobile Branding - Hidden on desktop -->
      <div class="lg:hidden text-center mb-8">
        <h1 class="font-serif text-4xl font-medium tracking-tight text-white mb-2">TypeLit</h1>
        <p class="text-stone-400">Master typing by reading books</p>
      </div>

      <!-- Login Card -->
      <div class="bg-white rounded-xl shadow-sm border border-stone-200 p-8">
        <div class="space-y-6">

          <!-- Header - Hidden on mobile since branding is above -->
          <div class="hidden lg:block text-center">
            <h2 class="font-serif text-2xl font-medium text-stone-900 mb-1">Welcome back</h2>
            <p class="text-stone-500 text-sm">Sign in to continue reading</p>
          </div>

          <!-- Form -->
          <%= form_with url: login_path, method: :post, class: "space-y-4" do |f| %>

            <div>
              <%= f.label :username, class: "block text-sm font-medium text-stone-700 mb-1" %>
              <%= f.text_field :username,
                  autofocus: true,
                  autocomplete: "username",
                  class: "w-full px-3 py-2 rounded-lg border border-stone-300 focus:outline-none focus:ring-2 focus:ring-stone-900 focus:border-transparent transition-shadow" %>
            </div>

            <div>
              <%= f.label :password, class: "block text-sm font-medium text-stone-700 mb-1" %>
              <%= f.password_field :password,
                  autocomplete: "current-password",
                  class: "w-full px-3 py-2 rounded-lg border border-stone-300 focus:outline-none focus:ring-2 focus:ring-stone-900 focus:border-transparent transition-shadow" %>
            </div>

            <div class="pt-2">
              <%= f.submit "Log in", class: "w-full bg-stone-900 text-white font-medium py-2.5 px-4 rounded-lg hover:bg-stone-800 transition-colors cursor-pointer" %>
            </div>

          <% end %>

        </div>
      </div>

    </div>
  </div>
</div>
