<div class="max-w-6xl mx-auto px-6 py-12">
  <% if current_user.books.joins(passages: :typing_sessions).exists? %>
    <%= render "books/progress_chart" %>
  <% else %>
    <div class="mb-8 p-4 bg-stone-100 border border-stone-200 rounded-lg flex items-center gap-3 text-stone-500">
      <svg class="w-5 h-5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
      </svg>
      <p class="text-sm">Complete a typing session to see your progress chart here</p>
    </div>
  <% end %>

  <!-- Library Section -->
  <header class="flex items-center justify-between mb-8">
    <h2 class="text-xl font-medium tracking-tight text-stone-700">Your Library</h2>
    <%= link_to "Upload Book", new_book_path, class: "px-4 py-2 bg-stone-900 text-white text-sm font-medium rounded hover:bg-stone-800 transition-colors" %>
  </header>

  <% if @books.any? %>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-8">
      <% @books.each do |book| %>
        <div class="group">
          <%= link_to book_path(book), class: "block" do %>
            <div class="aspect-[2/3] bg-stone-100 rounded-sm overflow-hidden mb-3 shadow-sm group-hover:shadow-md transition-shadow">
              <% if book.cover_image.attached? %>
                <%= image_tag book.cover_image, class: "w-full h-full object-cover" %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center text-stone-400">
                  <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                </div>
              <% end %>
            </div>
          <% end %>

          <div class="space-y-1">
            <%= link_to book_path(book), class: "block" do %>
              <h2 class="font-medium text-stone-900 leading-tight line-clamp-2 group-hover:underline"><%= book.title %></h2>
            <% end %>
            <p class="text-sm text-stone-500"><%= book.author %></p>

            <div class="flex items-center gap-2 mt-2">
              <div class="flex-1 h-1 bg-stone-200 rounded-full overflow-hidden">
                <div class="h-full bg-stone-700 rounded-full" style="width: <%= book.progress_percentage %>%"></div>
              </div>
              <span class="text-xs text-stone-500 font-mono"><%= book.progress_percentage %>%</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-24">
      <svg class="mx-auto w-16 h-16 text-stone-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
      </svg>
      <h2 class="text-xl font-medium text-stone-700 mb-2">No books yet</h2>
      <p class="text-stone-500 mb-6">Upload an epub to start typing practice</p>
      <%= link_to "Upload your first book", new_book_path, class: "inline-block px-4 py-2 bg-stone-900 text-white text-sm font-medium rounded hover:bg-stone-800 transition-colors animate-pulse-glow" %>
    </div>
  <% end %>
</div>
